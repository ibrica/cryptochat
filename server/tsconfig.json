
{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "strict": false,
      "noImplicitAny": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "types": [
         "lodash",
         "node"
      ],
      "typeRoots": [
         "./node_modules/@types"
      ],
    },
    "exclude": [
      "node_modules/*"
    ],
    "lib": [
      "esnext"
    ],
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
    ],
  }