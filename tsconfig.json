
{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "types": [
         "lodash",
         "node"
      ],
      "typeRoots": [
         "./node_modules/@types"
      ],
    },
    "exclude": [
      "node_modules/*"
    ]
  }